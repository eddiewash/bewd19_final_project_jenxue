<h1>Welcome to E-Spot</h1>

<h3><%= "Here you can look for an event near you" %></h3>

<h3><%= link_to "Create Event", new_event_path %></h3>

<%= form_tag '/', method: :get do %>
  <%= search_field_tag :q, params[:q] %>
  <%= submit_tag "Search for an event" %>
<% end %>

<br/>

<div id="events">
  <ul>
    <%= render 'event' %>
  </ul>
</div>
